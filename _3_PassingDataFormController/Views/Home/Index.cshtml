
@{
    Layout = null;

    var numbers = (int[])ViewData["numbers"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        HomeController - Index view
        <br />
        @ViewBag.message
        <br />
        @ViewData["mesaj"]
        <br />
        @foreach (var item in numbers)
        {
            @item
        }
        <br />
        @if (TempData["message"] != null)
        {
            @TempData["message"]
        }
    </div>
</body>
</html>
